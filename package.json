{
  "name": "protonmail-desktop",
  "productName": "Protonmail Desktop",
  "description": "Unofficial Electron wrapper for ProtonMail",
  "version": "0.5.8",
  "author": {
    "name": "Matthew Core <matcore@protonmail.com>",
    "email": "matcore@protonmail.com"
  },
  "copyright": "Â© 2017, M. Core <BeatPlus>.",
  "homepage": "https://github.com/protonmail-desktop/application",
  "repository": {
    "type": "git",
    "url": "https://github.com/protonmail-desktop/application"
  },
  "license": "MIT",
  "main": "app/background.js",
  "build": {
    "appId": "com.beatplus.pronmail-desktop",
    "publish": [
      "github"
    ],
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "tar.gz",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "freebsd",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        "AppImage",
        "snap",
        "pacman"
      ],
      "category": "Office"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "icon": "build/Icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "files": [
      "app/**/*",
      "app/static/*",
      "node_modules/**/*",
      "yarn.lock"
    ]
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "precommit": "eslint src --fix",
    "build:renderer": "webpack --config config/webpack.renderer.js",
    "build:main": "webpack --config config/webpack.main.js",
    "build": "npm run build:renderer && npm run build:main",
    "build:prod": "cross-env NAME=production npm run build",
    "eslint": "eslint src",
    "release": "electron-builder -p onTagOrDraft",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "start": "electron .",
    "test": "electron-mocha --require babel-core/register src/**.spec.js",
    "coverage": "yarn test -- -R scripts/istanbul-reporter",
    "e2e": "mocha e2e/*.e2e.js --trace-warnings --full-trace --require babel-core/register"
  },
  "dependencies": {
    "dragula": "^3.7.2",
    "electron-context-menu": "^0.9.1",
    "electron-context-menu-handler": "^1.0.3",
    "electron-debug": "^1.1.0",
    "electron-dl": "^1.9.0",
    "electron-settings": "3.1.4",
    "electron-tabs": "0.9.0",
    "electron-updater": "2.19.1",
    "eslint": "^4.8.0",
    "fs-jetpack": "^1.2.0",
    "minimist": "^1.2.0",
    "sweetalert2": "7.6.2"
  },
  "devDependencies": {
    "babel-loader": "^7.1.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.0",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "electron": "1.7.11",
    "electron-builder": "19.54.0",
    "electron-mocha": "5.0.0",
    "electron-reload": "^1.1.0",
    "eslint-plugin-mocha": "^4.11.0",
    "fs": "0.0.1-security",
    "html-webpack-plugin": "^3.0.6",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "minimist": "^1.2.0",
    "mocha": "^3.5.0",
    "node-sass": "^4.7.2",
    "path": "^0.12.7",
    "sass-loader": "^6.0.7",
    "sinon": "^4.0.1",
    "sinon-chai": "^2.14.0",
    "source-map-support": "^0.4.15",
    "spectron": "^3.7.2",
    "style-loader": "^0.20.3",
    "url-loader": "^1.0.1",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.12"
  }
}
